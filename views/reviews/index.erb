.parenting, .kids {
    display: flex;
    flex flex-direction: column
    margin: 5px;
} 


h2 {
    font-family: monospace;
    color: darkcyan;
    border: 5px double;
    border-left: none;
    border-right: none;
    width: fit-content;
    padding: 10px;
}

img {
    width: 150px;
}

