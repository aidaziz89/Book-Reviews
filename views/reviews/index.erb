<% if logged_in? %>
    <h3>Welcome to Book Reviews <%= current_user['first_name'] %></h3>

    <form action="/sessions" method="POST">
        <input type="hidden" name="_method" value="delete">
        <button>Log Out</button>
    </form>

<% else %>
    <a href="/signup"><button>Sign Up</button></a>
    <a href="/login"><button>Log In</button></a>

<% end %>

<h2>RECOMMENDATION BOOKS</h2>
<section>

<h3>Genre: Parenting</h3>
<div class="parenting">

<% parenting_books.each do |book| %> 
    <img src="<%= book["image_url"]%>" alt="">
    <br> 
    <a href="/reviews/details/<%= book["title"]%>"><button clss="book">More Info</button></a>
<% end %>
</div>


<h3>Genre: Kids</h3>
<div class="kids">

<% kids_books.each do |book| %> 
    <img src="<%= book["image_url"]%>" alt="">
    <br>
    <a href="/reviews/details/<%= book["title"]%>"><button class="book">More Info</button></a>
<br>
<% end %>
</div>
</section>

